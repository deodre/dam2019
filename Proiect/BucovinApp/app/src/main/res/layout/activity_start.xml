<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    tools:context=".StartActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/text_buton_start_activity"
        android:layout_centerInParent="true"
        android:onClick="metodaStart"
        android:id="@+id/startButonID">
    </Button>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_title_start_activity"
        android:layout_centerHorizontal="true"
        android:textColor="@color/White"
        android:id="@+id/startAppNameID">
    </TextView>

    <TextView
        android:id="@+id/textView"
        android:layout_width="200dp"
        android:layout_height="134dp"
        android:layout_above="@+id/startButonID"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="208dp"
        android:text="@string/welcome_text_start_activity"
        android:textSize="30dp"
        android:textColor="@color/White"/>

</RelativeLayout>